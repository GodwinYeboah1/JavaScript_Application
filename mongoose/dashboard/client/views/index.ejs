<body>
    <div class="main">
        <div class="row">
            <div class="col-md-12">
                <div class="header">
                    <h1>Check out all the Penguins!</h1>
                </div> 
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 center-block">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Best Friend</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i in penguins) { %>
                        <tr>
                            <td><%= penguins[i].name %></td>
                            <td><%= penguins[i].age %></td>
                            <td><%= penguins[i].best_friend %></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
